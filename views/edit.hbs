{{!< layout/default}}
{{#contentFor 'body'}}
  <h2 class="feed-title">{{feed.title}} <a href="/" class="btn btn-default pull-right">New feed</a></h2>
  <ul class="nav nav-tabs">
    <li class="active"><a href="#view" data-toggle="tab">View</a></li>
    <li><a href="#spec" data-toggle="tab">Define</a></li>
    <li><a href="#publish" data-toggle="tab">Publish</a></li>
    <li><a href="#tutorial" data-toggle="tab">Tutorial</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="view">
      {{> feed_view}}
    </div>
    <div class="tab-pane" id="spec">
      {{> spec_form}}
    </div>
    <div class="tab-pane" id="publish">
      {{> publish_form}}
    </div>
    <div class="tab-pane" id="tutorial">
      {{> tutorial}}
    </div>
  </div>
  <h2 class="content-preview">Preview <a href="#" class="btn btn-default btn-update-preview pull-right">Update</a></h2>
  <div class="preview">
    <div class="loader"><img src="/images/loader.gif" /></div>
    <div class="content"></div>
  </div>
  <script type="text/javascript">
    var samples = {{{samplesJSON}}};
  </script>
{{/contentFor}}
