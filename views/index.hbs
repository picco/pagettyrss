{{!< layout/default}}
{{#contentFor 'body'}}
  <h2 class="feed-title">Create new feed</h2>
  <ul class="nav nav-tabs">
    <li class="active"><a href="#selector" data-toggle="tab">Define content</a></li>
    <li><a href="#feed" data-toggle="tab">Configure & Save</a></li>
    <li><a href="#tutorial" data-toggle="tab">Tutorial</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="selector">
      {{> selector_form}}
    </div>
    <div class="tab-pane" id="feed">
      {{> feed_form}}
    </div>
    <div class="tab-pane" id="tutorial">
      {{> tutorial}}
    </div>
  </div>
  <h2 class="content-preview">Preview <a href="#" class="btn btn-default btn-update-preview pull-right">Update</a></h2>
  <div class="preview">
    <div class="loader"><img src="/images/loader.gif" /></div>
    <div class="content"></div>
  </div>
  <script type="text/javascript">
    var samples = {{{samplesJSON}}};
  </script>
{{/contentFor}}
